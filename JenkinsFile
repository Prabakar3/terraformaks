pipeline{
    agent any
    tools{
        maven 'm1'
    }
    stages{
        stage('test'){
            steps{
                sh 'mvn clean test'
            }
        }
        stage('install'){
            steps{
                sh 'mvn clean install -D skipTests=true'
            }
        }
	
	stage('dockerbuild'){
	    steps{
  	        dir("backend"){
		    sudo usermod -aG docker $USER	
        	    sh 'docker build -t raamriot/backend:latest .'
                }
		dir("frontend"){
                  sudo usermod -aG docker $USER
                  sh 'docker build -t raamriot/frontend:latest .'
		}
            }
        }
        
        stage('docker push'){
            steps{
                withCredentials([usernamePassword(credentialsId: 'raamriot', passwordVariable: 'Fflkjomoqsq74', usernameVariable: 'user')]) {
                    sh 'docker login -u ${user} -p Fflkjomoqsq74'
                    sh 'docker push raamriot/backend:latest'
                    sh 'docker push raamriot/frontend:latest'
                }
            }
        }
    }	
}
